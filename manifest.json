{
  "manifest_version": 2,
  "name": "Spotify Web Player Control with Lyrics",
  "description": "This extension will allow you to control your current Spotify Web Player and show current playing song lyirics.",
  "version": "1.10",

  "browser_action": {
    "default_icon": {
      "19": "assets/hippodrome-icon.png",
      "38": "assets/hippodrome-icon.png",
      "48": "assets/hippodrome-icon.png",
      "128": "assets/hippodrome-icon.png"
    },
    "default_popup": "main.html"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://open.spotify.com/*",
    "contextMenus"
  ],

  "background": {
    "persistent": false,
    "scripts": ["js/background.js", "js/main.js"]
  },

  "icons": {
    "19": "assets/hippodrome-icon.png",
    "38": "assets/hippodrome-icon.png",
    "48": "assets/hippodrome-icon.png",
    "128": "assets/hippodrome-icon.png"
  }
}
